sig Node {
    adj : set Node
}

pred undirected {}   // No outgoing edges are symmetric

pred oriented {}     // No symmetric edges

pred acyclic {}      // No directed cycles

pred complete {}     // Every node is connected to every other node

pred noLoops {}      // No self-loop edges

pred weaklyConnected {}   // Reachable from any node ignoring edge direction

pred stronglyConnected {}  // Reachable from any node considering edge direction

pred transitive {}   // If two nodes are connected through a third, they are directly connected
